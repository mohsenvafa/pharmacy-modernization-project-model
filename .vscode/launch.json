{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Server",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/server",
      "env": {
        "PM_APP_ENV": "dev"
      },
      "args": [],
      "showLog": true,
      "trace": "verbose",
      "buildFlags": "-gcflags='all=-N -l'",
      "cwd": "${workspaceFolder}",
      "dlvFlags": ["--check-go-version=false"]
    },
    {
      "name": "Debug Server (with MongoDB)",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/server",
      "env": {
        "PM_APP_ENV": "dev"
      },
      "preLaunchTask": "start-mongodb",
      "args": [],
      "showLog": true,
      "buildFlags": "-gcflags='all=-N -l'",
      "cwd": "${workspaceFolder}",
      "dlvFlags": ["--check-go-version=false"]
    },
    {
      "name": "Debug Seed Script",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/seed",
      "args": [],
      "cwd": "${workspaceFolder}",
      "showLog": true
    },
    {
      "name": "Debug Mock IRIS",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/iris_mock",
      "args": [],
      "cwd": "${workspaceFolder}",
      "showLog": true
    },
    {
      "name": "Attach to Running Process With PID",
      "type": "go",
      "request": "attach", 
      "mode": "local",
      "processId": 10270,
      "showLog": true,
      "trace": "verbose",
      "cwd": "${workspaceFolder}",
      "buildFlags": "-gcflags='all=-N -l'",
      "dlvFlags": ["--check-go-version=false", "--accept-multiclient"]
    }
  ]
}

