{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@web/*": ["ts/*"],
      "@components/*": ["components/*"],
      "@domain/*": ["../domain/*"]
    },
    "outDir": "public/assets/js/dist",
    "declaration": true,
    "sourceMap": true
  },
  "include": [
    "ts/**/*.ts",
    "components/**/*.ts",
    "domain/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "public/assets/js/dist"
  ]
}
