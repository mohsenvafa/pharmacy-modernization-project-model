{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist/types",
    "skipLibCheck": true,
    "allowImportingTsExtensions": true
  },
  "include": ["src/**/*", "../shared/**/*"]
}

