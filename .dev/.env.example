# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# IMPORTANT: All RX_* variables must be UPPERCASE

# =============================================================================
# MongoDB Configuration (for Podman containers and seed script)
# =============================================================================
MONGO_ROOT_USERNAME=
MONGO_ROOT_PASSWORD=
MONGO_DATABASE=

# =============================================================================
# Application MongoDB URIs (REQUIRED - UPPERCASE)
# The Go application reads these via Viper with RX_ prefix
# =============================================================================
RX_DATABASE_MONGODB_URI=
RX_CACHE_MONGODB_URI=

# =============================================================================
# Authentication & Security (REQUIRED)
# =============================================================================
# JWT secret is REQUIRED even in dev mode (for when dev_mode is disabled)
# Generate a secure secret: openssl rand -base64 32
RX_AUTH_JWT_SECRET=

# =============================================================================
# Application Configuration (Optional overrides)
# =============================================================================
# RX_APP_PORT=8080
# RX_APP_ENV=dev

# Optional: Override dev mode setting
# RX_AUTH_DEV_MODE=false

# =============================================================================
# Logging Configuration (Optional)
# =============================================================================
# RX_LOGGING_LEVEL=info
# RX_LOGGING_FORMAT=json
# RX_LOGGING_OUTPUT=both

# =============================================================================
# External Service Configuration (Optional)
# =============================================================================
# RX_EXTERNAL_PHARMACY_USE_MOCK=false
# RX_EXTERNAL_BILLING_USE_MOCK=false

# =============================================================================
# Environment Selection (Optional)
# =============================================================================
# RX_APP_ENV=dev   # Uses app.yaml (default)
# RX_APP_ENV=prod  # Uses app.prod.yaml with production-safe defaults

# =============================================================================
# How Viper Maps Environment Variables:
# =============================================================================
# YAML key:             database.mongodb.uri
#                            ↓
# Replace dots with _:  database_mongodb_uri
#                            ↓
# Convert to UPPERCASE: DATABASE_MONGODB_URI
#                            ↓
# Add RX_ prefix:       RX_DATABASE_MONGODB_URI
# =============================================================================
